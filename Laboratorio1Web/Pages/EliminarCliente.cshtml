@page
@model Laboratorio1Web.Pages.EliminarClienteModel
@{
}
<h1>Eliminar Cliente</h1>

<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />
    <div asp-validation-summary="ModelOnly"> </div>
    <div class="form-group">
        <label asp-for="Cliente.CodigoCliente">
            <input type="text" class="form-control" asp-for="Cliente.CodigoCliente" readonly="readonly">
        </label>
       
    </div>
    <div class="form-group">
        <label asp-for="Cliente.NombreCliente">
            <input type="text" class="form-control" asp-for="Cliente.NombreCliente" readonly="readonly">
        </label>
      
    </div>
    <div class="form-group">
        <label asp-for="Cliente.ApellidoCliente">
            <input type="text" class="form-control" asp-for="Cliente.ApellidoCliente" readonly="readonly">
        </label>
    
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Direccion">
            <input type="text" class="form-control" asp-for="Cliente.Direccion" readonly="readonly" >
        </label>
  
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Telefono">
            <input type="text" class="form-control" asp-for="Cliente.Telefono" readonly="readonly">
        </label>
     
    </div>

    <button type="submit" value="Delete" class="btn btn-danger">Eliminar</button> <br />
    <a asp-page="/Clientes">Regresar a Clientes</a>
</form>