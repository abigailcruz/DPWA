@page
@model Laboratorio1Web.Pages.EditarClienteModel
@{
}


<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />
    <div asp-validation-summary="ModelOnly"> </div>
    <div class="form-group">
        <label asp-for="Cliente.CodigoCliente">
            <input type="text" class="form-control" asp-for="Cliente.CodigoCliente" placeholder="Ingresa el codigo del cliente">
        </label>
        <span class="text-danger" asp-validation-for="Cliente.NombreCliente"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.NombreCliente">
            <input type="text" class="form-control" asp-for="Cliente.NombreCliente" placeholder="Ingresa el nombre del cliente">
        </label>
        <span class="text-danger" asp-validation-for="Cliente.NombreCliente"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.ApellidoCliente">
            <input type="text" class="form-control" asp-for="Cliente.ApellidoCliente" placeholder="Ingresa el apellido del cliente">
        </label>
        <span class="text-danger" asp-validation-for="Cliente.ApellidoCliente"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Direccion">
            <input type="text" class="form-control" asp-for="Cliente.Direccion" placeholder="Ingresa la direccion del cliente">
        </label>
        <span class="text-danger" asp-validation-for="Cliente.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Telefono">
            <input type="text" class="form-control" asp-for="Cliente.Telefono" placeholder="Ingresa el telefono del cliente">
        </label>
        <span class="text-danger" asp-validation-for="Cliente.Telefono"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button> <br />
    <a asp-page="/Clientes">Regresar a Clientes</a>
</form>